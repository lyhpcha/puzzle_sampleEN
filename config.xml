<?xml version='1.0' encoding='utf-8'?>
<widget id="com.twtnn.puzzle_sampleEN" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>9-Piece Puzzle</name>
    <description>
        puzzle
    </description>
    <author email="service@twtnn.com" href="http://blogger.twtnn.com">
        keven
    </author>
    <content src="index.html" />
	<preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<icon src="res/android/icon36.png" density="ldpi" />
        <icon src="res/android/icon48.png" density="mdpi" />
        <icon src="res/android/icon72.png" density="hdpi" />
        <icon src="res/android/icon96.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
